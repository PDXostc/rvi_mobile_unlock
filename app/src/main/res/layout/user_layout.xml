<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="4">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Name"/>
    <TextView
        android:id="@+id/vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Vehicle"/>
    <TextView
        android:id="@+id/validfromlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Valid From:"/>
    <TextView
        android:id="@+id/validtolbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Valid To:"/>

    <TextView
        android:id="@+id/validfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Valid From"/>
    <TextView
        android:id="@+id/validto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Valid To"/>
    <CheckBox
        android:id="@+id/lock_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:text="Lock/Unlock"
        />
    <CheckBox
        android:id="@+id/enginestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:enabled="false"
        android:text="Engine Start"
        />
</GridLayout>