<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginTop"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:id="@+id/unlock_app"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginRight="@dimen/marginRightRVIscreen"
            android:background="@drawable/grey_button_small"
            android:onClick="openUnlock"
            android:text="@string/unlock_icon"
            android:textColor="#fff"
            android:textSize="80sp"/>

        <ImageButton
            android:id="@+id/hvac_app"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginLeft="@dimen/marginLeftRVIscreen"
            android:background="@drawable/blue_button_small"
            android:onClick="openHVAC"
            android:src="@drawable/hvac_app_icon"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="@dimen/marginRightRVIscreen"
            android:background="@drawable/orange_button_small"
            android:src="@drawable/dashboard_app_icon"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/marginLeftRVIscreen"
            android:background="@drawable/light_grey_button_small"
            android:text="@string/notification"
            android:textColor="#fff"
            android:textSize="80sp"/>

        <Button
            android:id="@+id/profile"
            style="@style/black_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_button"
            android:onClick=""
            android:text="@string/profile"
            android:textAllCaps="false"/>

    </GridLayout>

</LinearLayout>