<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/userheader"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="User: "
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/vehicleheader"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/vehicle"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="100sp"
            android:layout_height="175sp"
            android:layout_column="0"
            android:layout_marginRight="15dp"
            android:layout_row="0"
            android:background="@drawable/grey_button"
            android:id="@+id/unlock"
            android:text="Unlock"
            android:textColor="#000"
            android:textSize="15dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/start"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/red_button"
                android:paddingTop="15dp"
                android:text="Start"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/stop"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_column="1"
                android:layout_marginTop="0dp"
                android:layout_row="1"
                android:background="@drawable/red_button"
                android:paddingTop="15dp"
                android:text="Stop"
                android:textColor="#000"
                android:textSize="20sp"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/lock"
            android:layout_width="100sp"
            android:layout_height="175sp"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:background="@drawable/grey_button"
            android:text="Lock"
            android:textColor="#000"
            android:textSize="15dp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/keysharelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="@string/share_lbl"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:background="@drawable/background">

        <Button
            android:id="@+id/share"
            android:layout_column="2"
            android:layout_row="8"
            android:layout_width="115sp"
            android:layout_height="115sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:text="@string/share"
            android:background="@drawable/grey_button"
            android:textAllCaps="false"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/change"
            android:layout_column="0"
            android:layout_row="8"
            android:layout_width="115sp"
            android:layout_height="115sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/change"
            android:background="@drawable/grey_button"
            android:textAllCaps="false"
            android:visibility="visible"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/guestvalidDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/guestvalidTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/trunk"
        style="@style/black_button_text"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_row="1"
        android:background="@drawable/black_button"
        android:text="@string/share"
        android:textAllCaps="false"
        android:visibility="gone" />

    <Button
        android:id="@+id/panic"
        android:layout_width="115sp"
        android:layout_height="115sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:onClick="sendPanic"
        android:text="@string/panic_icon"
        android:textColor="#fff"
        android:textSize="90sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/panicOn"
        android:layout_width="115sp"
        android:layout_height="115sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:onClick="sendPanicOff"
        android:text="@string/panic_stop_icon"
        android:textColor="#fff"
        android:textSize="90sp"
        android:visibility="gone" />
