<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#444" />
            <stroke
                    android:color="#fff"
                    android:width="1dp" />
            <padding
                    android:bottom="20dp"
                    android:top="20dp"
                    android:left="20dp"
                    android:right="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#333" />
            <stroke
                    android:color="#fff"
                    android:width="1dp" />
            <padding
                    android:bottom="20dp"
                    android:top="20dp"
                    android:left="20dp"
                    android:right="20dp" />
        </shape>
    </item>

</selector>