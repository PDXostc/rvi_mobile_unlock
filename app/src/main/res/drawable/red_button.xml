<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid
                    android:color="#ef4444" />
            <stroke
                    android:width="1dp"
                    android:color="#992f2f" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                    android:startColor="#ef4444"
                    android:endColor="#992f2f" />
            <stroke
                    android:width="1dp"
                    android:color="#992f2f" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>