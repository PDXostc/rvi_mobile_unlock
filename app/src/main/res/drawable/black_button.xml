<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#300000" />
            <stroke
                    android:color="#fff"
                    android:width="1dp" />
            <padding
                    android:bottom="20dp"
                    android:top="20dp"
                    android:left="16dp"
                    android:right="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#000" />
            <stroke
                    android:color="#fff"
                    android:width="1dp" />
            <padding
                    android:bottom="20dp"
                    android:top="20dp"
                    android:left="16dp"
                    android:right="16dp" />
        </shape>
    </item>

</selector>